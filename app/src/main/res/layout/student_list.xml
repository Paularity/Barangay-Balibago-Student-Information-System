<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fullname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Citizenship"
        android:textColor="#ff0c00" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dateOfBirth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Comelec Number"
        android:textColor="#ff0c00" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_citizenship"
        android:layout_alignStart="@+id/tv_citizenship"
        android:layout_below="@+id/tv_comelecNo"
        android:layout_marginTop="15dp"
        android:text="Date Issued"
        android:textColor="#ff0c00" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_gravity="center"
        android:text="Fullname(Lastname, Firstname, Middlename)"
        android:textColor="#ff0c00" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="RESIDENT IDENTITY CARD"
            android:textSize="20dp"
        android:layout_gravity="center"
            android:textColor="#003b9b"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="Date of Birth and Place of Birth"
        android:textColor="#ff0c00" />

    <TextView
        android:id="@+id/tv_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_gravity="center"
        android:text="TextView"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_citizenship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_gravity="center"
        android:text="TextView"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="TextView"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_placeOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/tv_comma"
        android:layout_toRightOf="@+id/tv_comma"
        android:text="TextView"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_comma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_dateOfBirth"
        android:layout_alignBottom="@+id/tv_dateOfBirth"
        android:layout_toEndOf="@+id/tv_dateOfBirth"
        android:layout_toRightOf="@+id/tv_dateOfBirth"
        android:text=","
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_dateIssued"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_gravity="center"
        android:text="TextView"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_comelecNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_gravity="center"
        android:text="TextView"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher" />


</RelativeLayout>